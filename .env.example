# WhatsApp Configuration
# No direct WhatsApp credentials needed with whatsapp-web.js (uses session files)

# Appwrite Configuration (optional - for message logging)
APPWRITE_ENDPOINT=https://appwrite.example.com/v1
APPWRITE_PROJECT_ID=your_project_id
APPWRITE_API_KEY=your_api_key
APPWRITE_DATABASE_ID=your_database_id
APPWRITE_COLLECTION_ID=your_collection_id

# Rate Limiting & Delays (ms) - adjust to reduce WhatsApp ban risk
# Base delay between replies (default 1000ms = 1 second for fast responses)
MESSAGE_DELAY_MS=1000

# Jitter percentage (randomness) to look more human (default ±40%)
# Actual delay = MESSAGE_DELAY_MS ± (MESSAGE_DELAY_MS * MESSAGE_DELAY_JITTER_PCT / 100)
# Example: 1000ms with 40% jitter = 600ms to 1400ms random (0.6s to 1.4s)
MESSAGE_DELAY_JITTER_PCT=40

# Max messages per user per minute
MESSAGE_LIMIT_PER_MIN=25

# Server Port
PORT=3000

# Optional: S3 Session Persistence (for Railway/ephemeral environments)
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# SESSION_S3_KEY=whatsapp/session.zip

